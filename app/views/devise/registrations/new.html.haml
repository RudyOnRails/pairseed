%h2.text-center I am so excited you're signing up!
.offset4.span2
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      %br/
      = f.email_field :first_name, :autofocus => true, :placeholder => "Enter your first name..."
    %div
      %br/
      = f.email_field :last_name, :placeholder => "Enter your last name..."
    %div
      %br/
      = f.email_field :email, :placeholder => "Enter your email address..."
    %div
      %br/
      = f.text_field :username, :placeholder => "Enter a username..."
    %div
      %br/
      = f.password_field :password, :placeholder => "Give us your password!"
    %div
      %br/
      = f.password_field :password_confirmation, :placeholder => "Give it to us again!"
    %div= f.submit "Sign up"
  = render "devise/shared/links"
