.row
  %h4.text-center I am so excited you're signing up!
  .text-center.top-buffer=image_tag "excited_kid.gif"
.row
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .span5
      = devise_error_messages!
      %div
        %br/
        = f.text_field :first_name, :autofocus => true, :placeholder => "Enter your first name..."
      %div
        %br/
        = f.text_field :last_name, :placeholder => "Enter your last name..."
      %div
        %br/
        = f.email_field :email, :placeholder => "Enter your email address..."
      %div
        %br/
        = f.text_field :username, :placeholder => "Enter a username..."
      %div
        %br/
        = f.password_field :password, :placeholder => "Give us your password!"
      %div
        %br/
        = f.password_field :password_confirmation, :placeholder => "Give it to us again!"
    .span5
      - resource.build_profile
      = f.fields_for :profile do |builder|
        = builder.text_area :summary, :class => "span6", :rows => 3, :placeholder => "Tell us a little about your background and why you like to pair!"

    %div= f.submit "Sign up"
  = render "devise/shared/links"

