= form_for @pair_place do |f|
  - if @pair_place.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pair_place.errors.count, "error")} prohibited this pair_place from being saved:"
      %ul
        - @pair_place.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit 'Save'
