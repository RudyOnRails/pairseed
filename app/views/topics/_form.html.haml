= form_for @topic, :html => {:multipart => true} do |f|
  -if @topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topic.errors.count, "error")} prohibited this topic from being saved:"
      %ul
        - @topic.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_area :title, :class => 'span6', :rows => 3, :placeholder => "Add a topic you are having trouble with or just want to learn and someone will offer to pair up."
  .field
    = f.label :pic, "Need to upload a picture to get the point across?"
    = f.file_field :pic
  .actions
    = f.submit :class => "btn btn-success"
