= form_for @topic, :html => {:multipart => true} do |f|
  -if @topic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topic.errors.count, "error")} prohibited this topic from being saved:"
      %ul
        - @topic.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_area :title, :class => 'span6', :rows => 3, :placeholder => "Add a topic you are having trouble with or just want to learn..."
  .field
    = f.label :description
    = f.text_area :description, :class => 'span6', :rows => 3, :placeholder => "Share a few sentences to describe your problem..."
  .field
    = f.label :pic, "Need to upload a picture to get the point across?"
    = f.file_field :pic
  .field
    = f.label "Pair Type"
    = f.collection_select :pair_type_id, PairType.all, :id, :name
  .actions
    = f.submit :class => "btn btn-success"
